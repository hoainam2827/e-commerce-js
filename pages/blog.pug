extends ./base/base.pug

block variables
    - const title = "Blog";
    - const current = "/blog.html";

    include ./variables/breadcrumb_var.pug
    include ./variables/blog_var.pug
    include ./components/breadcrumb.pug

block content
    +breadcrumb(blog_breadcrumb, current)
    section#blog
        .container
            .text-left
                h1.title Blog
            .blog
                .row
                    each item in blog_list
                        - const {img, title, author, date, comment, content}=item
                        .col-lg-4.col-md-6
                            article.blog-item
                                .blog-img
                                    img(src="../assets/img/"+img, alt="blog image")
                                    i.fas.fa-link
                                .blog-content
                                    a(href="/blog-detail.html").title-blog= title
                                    p.info-blog= "Đăng bởi " +author + " | " + date + " | " + comment + " bình luận"
                                    p.content-blog= content
                                    a(href="#").read-more Read more