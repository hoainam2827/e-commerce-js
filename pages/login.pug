extends ./base/base.pug

block variables
    - const title = "Login";
    - const current = "/login.html";

    include ./variables/breadcrumb_var.pug
    include ./variables/blog_var.pug
    include ./components/breadcrumb.pug

block content
    +breadcrumb(login_breadcrumb, current)
    section#login
        .container
            .login-header.d-flex
                h1.title Đăng nhập
                a.btn-main(href="#") Đăng ký
            form.login-form#form-1
                h3 Khách hàng đăng nhập
                p Nếu bạn có một tài khoản, xin vui lòng đăng nhập.
                .input-area
                    .form-group
                        label(for="email") Email
                            span *
                        input#email(type="email")
                    span.form-message
                .input-area
                    .form-group
                        label(for="password") Password
                            span *
                        input#password(type="password")
                    span.form-message
                .form-options
                    .form-check
                        label(for="save-pass") Lưu mật khẩu
                            input#save-pass(type="checkbox")
                    a.forget-link(href="#") Quên mật khẩu?
                button.btn-main Đăng nhập
block scripts
    script(src='js/validator.js')
    script.
        Validator({
            form: '#form-1',
            errorSelector: '.form-message',
            formGroupSelector: '.input-area',
            rules: [
                Validator.isEmail('#email'),
                Validator.minlength('#password', 8),
            ]
        });